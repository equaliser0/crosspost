{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/twitter-api": [
        "libs/twitter-api/src"
      ],
      "@app/twitter-api/*": [
        "libs/twitter-api/src/*"
      ],
      "@app/hive-api": [
        "libs/hive-api/src"
      ],
      "@app/hive-api/*": [
        "libs/hive-api/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}